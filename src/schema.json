{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "file-uri",
      "description": "The schema that this document should conform to."
    },
    "version": {
      "type": "string",
      "description": "The version of the package. Uses semver."
    },
    "applications": {
      "type": "array",
      "description": "List of applications that will be installed with this package.",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the application."
          },
          "type": {
            "type": "string",
            "description": "The type of application.",
            "enum": [
              "web",
              "cli",
              "library"
            ]
          },
          "description": {
            "type": "string",
            "description": "A description of the application."
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "The URL of the application website."
          },
          "repository": {
            "type": "string",
            "format": "uri",
            "description": "The URL of the application repository."
          },
          "install": {
            "type": "string",
            "description": "The command to install the application."
          },
          "update": {
            "type": "string",
            "description": "The command to update the application."
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "type",
          "install",
          "repository"
        ]
      }
    },
    "additionalProperties": false
  },
  "required": [
    "version",
    "applications"
  ],
  "additionalProperties": false
}
